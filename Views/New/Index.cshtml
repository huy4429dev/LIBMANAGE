@{
    Layout = "_Layout";

	   List<Post> Posts = Model;
}


<!-- Start Bradcaump area -->
		<div class="ht__bradcaump__area bg-image--4">
			<div class="container">
				<div class="row">
					<div class="col-lg-12">
						<div class="bradcaump__inner text-center">
							<h2 class="bradcaump-title">Tin tức</h2>
							<nav class="bradcaump-content">
								<a class="breadcrumb_item" href="index.html">Trang chủ</a>
								<span class="brd-separetor">/</span>
								<span class="breadcrumb_item active">Tin tức</span>
							</nav>
						</div>
					</div>
				</div>
			</div>
		</div>
		<!-- End Bradcaump area -->
		<!-- Start Blog Area -->
		<div class="page-blog bg--white section-padding--lg blog-sidebar right-sidebar">
			<div class="container">
				<div class="row">
					<div class="col-lg-9 col-12">
						<div class="blog-page">
							<div class="page__header">
							</div>
							@if(Posts.Count > 0){
								@foreach (var item in Posts)
								{
									<article class="blog__post d-flex flex-wrap">
										<div class="thumb">
											<a href="/new/@item.Id">
												<img style="height: 200px; object-fit:contain" src="@item.Thumbnail" alt="blog images">
											</a>
										</div>
										<div class="content">
											<h4><a href="new/@item.Id">@item.Title</a></h4>
											<ul class="post__meta">
												<li>Tác giả : <a href="#">@item.User.FullName</a></li>
												<li class="post_separator">/</li>
												<li>@item.CreatedAt.ToString("dd/MM/yyyy HH:mm")</li>
											</ul>
											<p>@(item.Description.Length <= 255 ? item.Description : item.Description.Substring(0,255) + "..." )</p>
											<div class="blog__btn">
												<a href="new/@item.Id">Xem thêm</a>
											</div>
										</div>
									</article>
								}
							}
							else{
								<div class="alert alert-warning">Không có kết quả nào</div>
							}
		
						</div>
						@* <ul class="wn__pagination">
							<li class="active"><a href="#">1</a></li>
							<li><a href="#">2</a></li>
							<li><a href="#">3</a></li>
							<li><a href="#">4</a></li>
							<li><a href="#"><i class="zmdi zmdi-chevron-right"></i></a></li>
						</ul> *@
					</div>
					<div class="col-lg-3 col-12 md-mt-40 sm-mt-40">
						<div class="wn__sidebar">
							<!-- Start Single Widget -->
							<aside class="widget search_widget">
								<h3 class="widget-title">Tìm kiếm</h3>
								<form action="/new/search" method="GET">
									<div class="form-input">
										<input name="q" type="text" placeholder="Tiêu đề, tác giả...">
										<button type="submit"><i class="fa fa-search"></i></button>
									</div>
								</form>
							</aside>
							<!-- End Single Widget -->
							<!-- Start Single Widget -->
							<aside class="widget recent_widget">
								<h3 class="widget-title">Bài viết phổ biến</h3>
								<div class="recent-posts">
									<ul>

										@foreach (var item in ViewBag.HotPosts)
										{
											<li>
												<div class="post-wrapper d-flex">
													<div class="thumb">
														<a href="/new/@item.Id"><img src="@item.Thumbnail"
																alt="blog images"></a>
													</div>
													<div class="content">
														<h4><a href="/new/@item.Id">@item.Title</a></h4>
														<p> @item.CreatedAt.ToString("dd/MM/yyyy HH:mm")</p>
													</div>
												</div>
											</li>
										}
									</ul>
								</div>
							</aside>
						</div>
					</div>
				</div>
			</div>
		</div>
		<!-- End Blog Area -->